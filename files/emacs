(custom-set-variables
 '(font-lock-maximum-decoration t)
 '(font-lock-global-modes t)
 '(gnuserv-program (concat exec-directory "/gnuserv"))
 '(make-backup-files nil)
 '(global-font-lock-mode t nil (font-lock))
 '(setq default-tab-width t)
 '(only-global-abbrevs t))
(custom-set-faces
 '(default ((t (:foreground "white" :background "black"))) t)
 '(font-lock-string-face ((((class color) (background dark)) (:foreground "cyan3"))))
 '(font-lock-preprocessor-face ((((class color) (background dark)) (:foreground "blue"))))
 '(font-lock-variable-name-face ((((class color) (background dark)) (:foreground "yellow"))))
 '(font-lock-keyword-face ((((class color) (background dark)) (:foreground "steelblue1"))))
 '(font-lock-type-face ((((class color) (background dark)) (:foreground "grey80"))))
 '(font-lock-comment-face ((((class color) (background dark)) (:foreground "gray50"))))
 '(font-lock-function-name-face ((((class color) (background dark)) (:foreground "magenta")))))
;(set-background-color "black")

(defun fix-c-indents ()
  (setq c-basic-offset 2)
  (mapcar (function (lambda (cb)
                      (setcdr (assq (car cb) c-offsets-alist) (cdr cb))))
          '((inline-open . 0) (topmost-intro-cont . -) (access-label . -))))
(add-hook 'java-mode-hook 'fix-c-indents)
(add-hook 'c++-mode-hook 'fix-c-indents)
;make save be C-s, as it OBVIOUSLY should be!!!!!!!!
(global-set-key "" (quote save-buffer))
;use C-f for searching.  Still use C-s to repeat it
(global-set-key "" (quote isearch-forward)) 

;start up the emacs server
(server-start)
