#mysql for peterlyons.com (Wordpress blogs)
check process "mysql_peterlyons.com"
    with pidfile "/var/run/mysqld/mysqld.pid"
    start = "/usr/bin/service mysql start"
    stop = "/usr/bin/service mysql stop"
    if failed host 127.0.0.1 port 3306 then restart
    if 5 restarts within 5 cycles then timeout
