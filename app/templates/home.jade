:coffeescript
  speed = -> Math.random() * 200 + 50
  $ ->
    header = $("#intro .highlight")
    subtitle = header.text()
    header.text("")
    pushLetter = ->
      text = header.text()
      if text.length == subtitle.length
        return
      header.text(text + subtitle[text.length])
      setTimeout(pushLetter, speed())
    setTimeout(pushLetter, speed())
