@import "kona_coast.color"
pad1 = 4px
pad2 = 20px
a
  color dark2
  text-decoration none

body
  background-color light1
  color dark1
  font-family Verdana, Arial, Helvetica, sans-serif
  font-size 14px
  letter-spacing 0.1em
  line-height 2em
  margin 0
  padding 0
  text-align center

h1, h2, h3, h4, h5, h6
  color dark3

h1
  font-size 3em

h2
  font-size 2em

header
  padding pad2 0

header > nav > a
  padding pad2

header > h1
  display inline

header > nav
  display inline

img
  border none

img.icon
  padding 0 pad1
  vertical-align middle

p.big
  font-size 20px
  width 50%

code, pre
  background-color light2
  color dark2
  font-family courier, serif
  line-height 1em
  overflow auto
  padding-left pad1
  padding-right pad1

li
  padding-top pad1

#wrap
  margin 0 auto
  max-width 800px
  min-width 600px
  text-align left